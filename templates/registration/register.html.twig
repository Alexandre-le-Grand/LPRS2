{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                {% if app.user %}
                    <h1 class="text-center m-4">Modification de compte</h1>
                {% else %}
                    <h1 class="text-center m-4">Inscription</h1>
                {% endif %}

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
                {{ form_row(registrationForm.nom, {
                    label: 'Nom',
                    attr: {
                        class: 'form-control',
                        placeholder: 'Nom'
                    }
                }) }}
                {{ form_row(registrationForm.prenom, {
                    label: 'Prenom',
                    attr: {
                        class: 'form-control',
                        placeholder: 'Prenom'
                    }
                }) }}
                {% if app.user and is_granted('ROLE_PROFESSEUR') %}
                    {{ form_row(registrationForm.discipline, {
                        label: 'Discipline',
                        attr: {
                            class: 'form-control',
                            placeholder: 'Discipline'
                        }
                    }) }}
                    {{ form_row(registrationForm.formation, {
                        label: 'Formation',
                        attr: {
                            class: 'form-control',
                            placeholder: 'Formation'
                        }
                    }) }}
                {% endif %}
                {{ form_row(registrationForm.email, {
                    label: 'Email',
                    attr: {
                        class: 'form-control',
                        placeholder: 'Email address'
                    }
                }) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        attr: {
                            class: 'form-control',
                            placeholder: 'Password'
                        }
                    }) }}
                    <div class="form-check my-3">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {
                                'class': 'form-check-input',
                                'id': 'agreeTerms'
                            }
                        }) }}
                        <label class="form-check-label" for="agreeTerms">
                            I agree to the <a href="#">terms and conditions</a>
                        </label>
                    </div>
        <button type="submit" class="btn btn-lg btn-primary m-3" >Register</button>
                   </a>
                      <a class="btn btn-lg btn-primary m-3" href="{{ path('app_main') }}">
                       retour
            
            </a>
    {{ form_end(registrationForm) }}
{% endblock %}


