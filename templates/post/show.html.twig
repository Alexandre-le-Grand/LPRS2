<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('css/forum.css') }}">
    <title>{{ post.titre }}</title>
    <style>
        html, body {
            height: 100%;
            overflow-y: auto;
            margin: 0;
            padding: 0;
        }
        .post-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        .post-header {
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .post-title {
            font-size: 24px;
            margin-bottom: 10px;
        }
        .post-meta {
            font-size: 14px;
            color: #6c757d;
        }
        .reponse {
            margin-top: 20px;
            padding-left: 20px;
            border-left: 4px solid #007bff;
            margin-bottom: 20px;
        }
        .reponse p {
            margin: 0;
        }
        .reponse-meta {
            font-size: 12px;
            color: #6c757d;
        }
        .form-group {
            margin-bottom: 20px;
        }
        textarea {
            width: 100%;
            height: 100px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 10px;
            resize: none;
        }
        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        form {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

<div class="post-container">
    <div class="post-header">
        <h3>{{ post.refUtilisateur.prenom }} {{ post.refUtilisateur.nom }}</h3>
        <h2 class="post-title"> Titre : {{ post.titre }}</h2>
        <p class="post-meta">Publié le {{ post.dateHeurePublication|date('d/m/Y à H:i') }}</p>
        <p> Contenu : {{ post.contenuPost }}</p>
    </div>

   <div class="comments-section">
    <h3>Commentaires</h3>
        {% for reponse in reponses %}
                        <h4>{{ reponse.refUtilisateur.prenom }} {{ reponse.refUtilisateur.nom }} </h4>

            <div class="reponse">
                <p>{{ reponse.contenu }}</p>
                <p class="reponse-meta">
                    le {{ reponse.dateHeureReponse|date('d/m/Y à H:i') }}
                </p>
                <form action="{{ path('app_reponse_edit', { id: reponse.id, postId: post.id }) }}" method="POST" style="display:inline-block;">
                    <button type="submit">Modifier</button>
                </form>
                <form action="{{ path('app_reponse_delete', { id: reponse.id, postId: post.id }) }}" method="POST" style="display:inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                    <button type="submit">Supprimer</button>
                </form>
            </div>
        {% else %}
            <p>Aucun commentaire.</p>
        {% endfor %}
    </div>


    <h3>Ajouter un commentaire</h3>
    <form action="{{ path('app_post_show', { id: post.id }) }}" method="POST">
        <div class="form-group">
            <textarea name="contenu" placeholder="Votre commentaire..."></textarea>
        </div>
        <button type="submit">Publier</button>
    </form>
</div>

</body>
</html>
